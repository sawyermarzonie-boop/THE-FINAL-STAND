<script>
function submitApplication() {
  const extraInfo = document.getElementById("extraInfo").value.toLowerCase();
  
  if(extraInfo.includes("yourmom")) {
    // Easter egg triggered: redirect to fun page
    window.location.href = "fun.html";
  } else {
    document.getElementById("successMsg").style.display = "block";
  }
}
</script>

